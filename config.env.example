# Cloudflare DNS Failover Configuration
# Copy this file to config.env and update with your values

# Required: Cloudflare API Token (create at https://dash.cloudflare.com/profile/api-tokens)
CF_API_TOKEN="your_api_token_here"

# Required: Cloudflare Zone ID (found in domain overview on Cloudflare dashboard)
CF_ZONE_ID="your_zone_id_here"

# Required: Domain to manage
DOMAIN="example.com"

# Required: Server IP addresses
PRIMARY_IP="1.2.3.4"
BACKUP_IP="5.6.7.8"

# Optional: DNS record configuration
RECORD_TYPE="A"
TTL="120"

# Optional: Health check configuration
PING_COUNT="3"
PING_TIMEOUT="3"

# Optional: Logging
LOG_FILE="/var/log/cloudflare_failover.log"